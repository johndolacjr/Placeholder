<!-- Loop over each object in the tenants array -->
{{#each tenants as |tenant| }}
<div class="mb-4 row tenant">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}} --}}
      <a href="/tenant/{{tenant.id}}">{{tenant.user.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="rating">ğŸ“ˆTenant Rating:</span>
      <!-- Pass needed_rating value to the helper function -->
      <span class="tenant-rating">{{format_amount tenant.tenant_rating}}</span>
    </p>
    <div class="col-md-12">
    <p>
      {{tenant.description}}
    </p>
    </div>    
    <p>Created by {{tenant.name}} on {{format_date tenant.date_created}}</p>

<div class="row">
  <div class="col-lg-12">
    <h3 class="text-center">Share your experience! 
      <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#exampleModal">
        Comment</button>
    </h3>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label"></label>
            <label for="recipient-name" class="col-form-label" id="tenantName">Username:</label>
              <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label" id="message">Write your comment here:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Send message</button>
      </div>
    </div>
  </div>
</div>

      </div>
    </p>
  </div>
</div>
{{/each}}
