<!-- Loop over each object in the tenants array -->
{{#each tenants as |tenant| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}} --}}
      <a href="/project/{{tenant.id}}">{{tenant.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ğŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount tenant.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{tenant.user.name}} on {{format_date tenant.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{tenant.description}}
    </p>
  </div>
</div>
{{/each}}
