      {{#if tenants.length}}
      <div class="col-md-12 tenant-list">
        <h3>Manage my Tenants:</h3>

        {{#each tenants as |tenant|}}
        <div class="row mb-6">
          <div class="col-md-6">
            <h4><a href="/tenant/{{tenant.id}}"> {{tenant.name}} </a></h4>
            <p>{{description}}</p>
          </div>
          <div class="col-md-6">
            <button class="btn btn-sm btn-update" data-id="{{tenant.id}}">Update</button>
            <br>
            <button class="btn btn-sm btn-remove" data-id="{{tenant.id}}">Remove</button>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
